@model BookStore.Models.Book

@{
    ViewData["Title"] = "Book Details";
}

<h2 class="my-4">Book Details</h2>

<div class="card">
    <div class="card-header">
        @Model.Title
    </div>
    <div class="card-body">
        <h5 class="card-title">@Model.Author</h5>
        <p class="card-text"><strong>Price:</strong> @Model.Price.ToString("C")</p>
        <p class="card-text"><strong>Genre:</strong> @Model.Genre</p>
        <p class="card-text"><strong>Description:</strong> @Model.Description</p>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
